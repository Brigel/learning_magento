<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content.aside">
            <block class="Magento\CatalogWidget\Block\Product\ProductsList" name="around_products"
                   template="product/widget/content/grid.phtml">
                <action method="setData">
                    <argument name="data" xsi:type="array">
                        <item name="title" xsi:type="string">Usually browsed with these products </item>
                        <item name="disable_title" xsi:type="string">0</item>
                        <item name="is_around" xsi:type="string">1</item>
                        <item name="show_pager" xsi:type="string">0</item>
                        <item name="products_count" xsi:type="string">6</item>
                    </argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
